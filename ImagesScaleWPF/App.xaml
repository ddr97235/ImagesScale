<Application x:Class="ImagesScale.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ImagesScale"
              xmlns:views="clr-namespace:ImagesScale.Views" xmlns:vm="clr-namespace:ImagesScale.ViewModels"
             StartupUri="/MainWindow.xaml">
    <Application.Resources>
        <local:Locator x:Key="locator">
            <local:Locator.MainVM>
                <vm:MainWindowViewModel/>
            </local:Locator.MainVM>
        </local:Locator>
        <views:SelectRectFrameworkElement x:Key="sd"
                          Scale="1"/>
         <views:FrameImage x:Key="fi"
                           Source="{Binding MainVM.FrameData.Frame, Mode=OneWay, Source={StaticResource locator}}"
                           FrameRectRelative="{Binding ViewboxRelative, Source={StaticResource sd}}"/>
   </Application.Resources>
</Application>
